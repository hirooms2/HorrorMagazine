<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.horrornumber1.horrormagazine.Widget.ScrollViewExt
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content_scroll"
        android:background="#000">

        <LinearLayout
            android:id="@+id/content_scroll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="60dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/content_logo"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="160dp"
                android:layout_marginBottom="80dp" />
            <TextView
                android:id="@+id/content_scroll_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="28dp"
                android:textColor="#f00"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:background="#00000000"
                android:textColor="@android:color/white"
                android:layout_marginTop="80dp"
                android:lineSpacingExtra="5dp"
                android:id="@+id/content_scroll_text"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:orientation="vertical">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:id="@+id/content_scroll_answerBtn"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/content_scroll_answerText"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:background="#00000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"></LinearLayout>
        </LinearLayout>
    </com.horrornumber1.horrormagazine.Widget.ScrollViewExt>
</RelativeLayout>