<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_cartoon_content"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.horrornumber1.horrormagazine.Activities.CartoonContent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/content_toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        app:theme="@style/ToolbarStyle">

        <TextView
            android:id="@+id/cartoon_toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="?attr/actionBarSize"
            android:layout_marginLeft="10dp"
            android:text="공포학과"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:layout_gravity="center_vertical|center_horizontal"/>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/cartoon_pager_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                android:name="com.horrornumber1.horrormagazine.Fragments.ContentCartoonFragment"
                android:id="@+id/cartoon_pager_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </fragment>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/alertFLayout"
            android:background="#AA000000">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/alertimg"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hidden_topview"
            android:background="#AA000000">

            <TextView android:id="@+id/number"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_gravity="start"
                android:gravity="center"
                android:textColor="@android:color/holo_red_dark"/>

            <TextView android:id="@+id/title"
                android:layout_width="307dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:gravity="center"
                android:textColor="@android:color/holo_red_dark"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hidden_bottomview"
            android:background="#AA000000"

            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView android:id="@+id/btn_previous"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="start"
                android:gravity="center"
                android:text="이전화"
                android:textColor="@android:color/holo_red_dark"
                android:onClick="mOnClick"/>

            <TextView android:id="@+id/btn_next"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="다음화"
                android:textColor="@android:color/holo_red_dark"
                android:onClick="mOnClick"/>
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>
