<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/favorite_listview_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="15dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/favorite_listview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/favorite_listview_board"
        android:textColor="#000"
        android:textSize="15dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/favorite_listview_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/favorite_listview_title"
        android:textColor="#a000"
        android:textSize="10dp"
        android:textStyle="italic"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"/>
    <ImageView
        android:id="@+id/favorite_listview_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/delete"
        android:focusable="false"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>
</RelativeLayout>